.transactions
    position relative

.block
    display flex
    justify-content space-between
    border 2px solid #000
    padding 5px
    border-bottom 0
    height 85px
    &&:last-child {
        border-bottom 2px solid #000
    }

.displayAmounts
    position absolute
    top -70px
    right 0
    display flex
    justify-content space-between
    align-items center
    width 300px
    user-select none

.displayAmounts-exchange
    border 1px solid #a9a9a9
    border-radius 6px
    height 35px
    padding 0 8px
    line-height 34px
    font-size 16px

.arrow
    position relative
    top -2px
    font-weight bold

.displayAmounts-exchange
    width 60px
    outline none

.displayAmounts__currency
    width 60px
    height 35px
    position relative
    line-height 30px
    cursor pointer

    border 1px solid #a9a9a9
    border-radius 6px
    padding 0 8px
    box-sizing border-box
    outline none

.displayAmounts-currency
    display none

.open
    display block
    position absolute
    right 0
    left 0
    border-top none
    bottom -33px
    border-radius 0 0 6px 6px
    padding-top 3px

.block__arrow-down
    background-color #f09482
    width 30px
    height 25px
    position relative
    top 10px
    margin 0 auto
    &::after
        content ""
        border 27px solid transparent
        border-top 27px solid #f09482
        display block
        bottom -54px
        left 50%
        position absolute
        transform translate(-50%)


.block__arrow-up
    @extend .block__arrow-down
    background-color #88b749
    top 34px
    margin 0 auto
    &::after
        border 27px solid transparent
        border-bottom 27px solid #88b749
        display block
        bottom 25px
        left 50%
        position absolute
        transform translate(-50%)

.block__about-desc
    font-size 28px
    margin-bottom 10px


.block__arrow
    flex-basis 110px
.block__about
    flex-grow 1
.block__income
    flex-basis 120px
    font-size 22px
    display flex
    flex-direction column
    justify-content center
    align-items center

.block__income
    flex-basis 150px

.block__expense
    @extend .block__income

.block__remove
    flex-basis 90px
    display flex
    justify-content: center
    align-items: center
    cursor pointer


.block__remove-image
    width 35px
    height auto

.block__empty
    font-size 31px
    font-weight bold
    color #575757

.block__balance
    display flex
    justify-content space-between
    align-items center
    margin 17px 0
    font-size 34px
    text-align right

.block__balance-text
    flex-basis 600px
    margin-right 60px

.block__balance-value
    flex-basis 150px
    text-align center
    margin-right 245px
    color #ba3438

.positive
    @extend .block__balance-value
    margin-right 95px
    color #000

.transactions__addSome
    text-align center
    font-size 24px
    font-style italic
    font-weight 100
    color #5c5c5c

@media screen and (max-width: 1100px)
    .displayAmounts
        right 50%
        transform translateX(50%)
    .block__empty
        flex-basis 90px
    .block__remove
        flex-basis 20px
    .block__income
        flex-basis 90px
    .block__expense
        flex-basis 90px
    .block__about
        flex-basis 130px
        display flex
        flex-direction column
        justify-content center

    .block__arrow
        flex-basis 55px
    .block__about-desc
        font-size 17px
        text-align center
    .block__about-date
        font-size 12px
        text-align center
    .block__income,
    .block__expense
        font-size 15px
    .block__remove-image
        width 27px
    .block__arrow-up
    .block__arrow-down
        width 21px
        height 21px
        top 19px
    .block__arrow-up
        top 34px
    .block__arrow-up::after
        border 21px solid transparent
        border-bottom 20px solid #88b749
        display block
        bottom 21px
        left 50%
        position absolute
        transform translate(-50%)
    .block__arrow-down::after
        content: "";
        border: 19px solid transparent;
        border-top: 20px solid #f09482;
        display: block;
        bottom: -39px;
        left: 50%;
        position: absolute;
        transform: translate(-50%);
    .block__balance-text
        flex-basis 280px
    .block__balance
        font-size 18px
    .block__balance-value
        margin-right 135px
    .positive
        margin-right 30px



